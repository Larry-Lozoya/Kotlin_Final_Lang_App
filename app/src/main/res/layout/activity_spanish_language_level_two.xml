<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ourColor"
    android:orientation="vertical"
    tools:context=".SpanishLanguageLevelTwoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actTwoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/actTwoInstructionsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/actTwoText"
        android:layout_width="353dp"
        android:layout_height="78dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <EditText
        android:id="@+id/actTwoEditText"
        android:layout_width="334dp"
        android:layout_height="77dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:hint="Enter Text Here..."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actTwoText"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/actTwoSubmitButton"
        android:layout_width="335dp"
        android:layout_height="68dp"
        android:onClick="actTwoSubmitButton"
        android:text="SUBMIT"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actTwoEditText"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/actTwoInstructionsText"
        android:layout_width="329dp"
        android:layout_height="126dp"
        android:gravity="center"
        android:text="Please Provide The Spanish Translation For the Provided English Sentence."
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/actTwoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854" />
</androidx.constraintlayout.widget.ConstraintLayout>